<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Equipment Tree View -->
    <record id="view_equipment_tree" model="ir.ui.view">
        <field name="name">branch_maintenance.equipment.tree</field>
        <field name="model">branch_maintenance.equipment</field>
        <field name="arch" type="xml">
            <list string="Equipment">
                <field name="name"/>
                <field name="equipment_model_id"/>
                <field name="category_id"/>
                <field name="branch_id"/>
                <field name="serial_number"/>
                <field name="purchase_date"/>
                <field name="active" column_invisible="True"/>
            </list>
        </field>
    </record>

    <!-- Equipment Form View -->
    <record id="view_equipment_form" model="ir.ui.view">
        <field name="name">branch_maintenance.equipment.form</field>
        <field name="model">branch_maintenance.equipment</field>
        <field name="arch" type="xml">
            <form string="Equipment">
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Equipment Name" groups="branch_maintenance_request.group_maintenance_manager"/>
                            <field name="name" readonly="1" groups="!branch_maintenance_request.group_maintenance_manager"/>

                        </h1>
                    </div>
                    <group groups="branch_maintenance_request.group_maintenance_manager">
                        <group>
                            <field name="category_id"/>
                            <field name="branch_id"/>
                            <field name="serial_number"/>
                        </group>
                        <group>
                            <field name="equipment_model_id"/>
                            <field name="purchase_date"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <group groups="!branch_maintenance_request.group_maintenance_manager">
                        <group>
                            <field name="category_id" readonly="1"/>
                            <field name="branch_id" readonly="1"/>
                            <field name="serial_number" readonly="1"/>
                        </group>
                        <group>
                            <field name="equipment_model_id" readonly="1"/>
                            <field name="purchase_date" readonly="1"/>
                            <field name="active" readonly="1"/>
                        </group>
                    </group>
                    <group string="Notes">
                        <field name="notes" nolabel="1" placeholder="Additional notes about the equipment..."
                               groups="branch_maintenance_request.group_maintenance_manager"/>
                        <field name="notes" nolabel="1" readonly="1"
                               groups="!branch_maintenance_request.group_maintenance_manager"/>
                    </group>
                </sheet>
                <chatter reload_on_follower="True"/>
            </form>
        </field>
    </record>

    <!-- Equipment Search View -->
    <record id="view_equipment_search" model="ir.ui.view">
        <field name="name">branch_maintenance.equipment.search</field>
        <field name="model">branch_maintenance.equipment</field>
        <field name="arch" type="xml">
            <search string="Search Equipment">
                <field name="name" string="Name" filter_domain="[('name','ilike',self)]"/>
                <field name="serial_number" string="Serial Number" filter_domain="[('serial_number','ilike',self)]"/>
                <filter string="Active" name="active" domain="[('active','=',True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active','=',False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Category" name="group_by_category" domain="[]" context="{'group_by':'category_id'}"/>
                    <filter string="Branch" name="group_by_branch" domain="[]" context="{'group_by':'branch_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Equipment Kanban View -->
    <record id="view_equipment_kanban" model="ir.ui.view">
        <field name="name">branch_maintenance.equipment.kanban</field>
        <field name="model">branch_maintenance.equipment</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="equipment_model_id"/>
                <field name="category_id"/>
                <field name="branch_id"/>
                <field name="serial_number"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <span><field name="category_id"/></span>
                                    <span> | </span>
                                    <span><field name="branch_id"/></span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>Serial: <field name="serial_number"/></div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Equipment Action -->
    <record id="action_equipment" model="ir.actions.act_window">
        <field name="name">Equipment</field>
        <field name="res_model">branch_maintenance.equipment</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first equipment item
            </p>
            <p>
                Track all your equipment including name, category, branch, purchase date, model, and serial number.
            </p>
        </field>
    </record>
</odoo>
