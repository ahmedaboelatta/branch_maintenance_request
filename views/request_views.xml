<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action Window for All Requests -->
    <record id="action_maintenance_request" model="ir.actions.act_window">
        <field name="name">Maintenance Requests</field>
        <field name="res_model">branch_maintenance.request</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'default_create_uid': uid}</field>
        <field name="domain">[]</field>
        <field name="help">Create maintenance requests for equipment issues</field>
    </record>

    <!-- Kanban View -->
    <record id="view_request_kanban" model="ir.ui.view">
        <field name="name">branch_maintenance.request.kanban</field>
        <field name="model">branch_maintenance.request</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile" records_draggable="true">
                <field name="state"/>
                <field name="name"/>
                <field name="branch_id"/>
                <field name="equipment_id"/>
                <field name="employee_id"/>
                <field name="priority"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="oe_kanban_record_headings">
                                        <strong class="oe_kanban_record_title"><field name="name"/></strong>
                                    </div>
                                    <span class="oe_kanban_record_right">
                                        <field name="priority" widget="priority" readonly="state != 'draft'"/>
                                    </span>
                                </div>
                                <ul>
                                    <li><i class="fa fa-building"/> <field name="branch_id"/></li>
                                    <li><i class="fa fa-gear"/> <field name="equipment_id"/></li>
                                    <li><i class="fa fa-user"/> <field name="employee_id"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- List View -->
    <record id="view_request_list" model="ir.ui.view">
        <field name="name">branch_maintenance.request.list</field>
        <field name="model">branch_maintenance.request</field>
        <field name="priority">2</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="create_date"/>
                <field name="branch_id"/>
                <field name="branch_location"/>
                <field name="equipment_id"/>
                <field name="equipment_type"/>
                <field name="employee_id"/>
<!--                <field name="employee_phone"/>-->
                <field name="priority" widget="priority" readonly="state != 'draft'"/>
                <field name="state"/>

            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_request_form" model="ir.ui.view">
        <field name="name">branch_maintenance.request.form</field>
        <field name="model">branch_maintenance.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit" string="Submit Request" type="object" invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_start_work" string="Start Work" type="object" invisible="state != 'submitted'" class="oe_highlight" groups="branch_maintenance_request.group_maintenance_manager"/>
                    <button name="action_mark_repaired" string="Mark Repaired" type="object" invisible="state not in ('in_progress',)" class="oe_highlight" groups="branch_maintenance_request.group_maintenance_manager"/>
                    <button name="action_close_wizard" string="Close Request" type="object" invisible="state != 'repaired'"
                           groups="branch_maintenance_request.group_branch_user" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,in_progress,repaired,closed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1" placeholder="Request Number"/></h1>
                    </div>
                    <group>
                        <group string="Request Details">
                            <field name="branch_id" placeholder="Select Branch" options="{'no_create': True}"
                                   readonly="state != 'draft'" force_save="1"/>
                            <field name="branch_location" readonly="1" placeholder="Location"/>
                            <field name="equipment_type" placeholder="Select Equipment Type" options="{'no_create': True}"
                                   readonly="state != 'draft'" force_save="1"/>
                            <field name="category_id" invisible="1"/>
                            <field name="equipment_id"
                                   placeholder="Select Equipment"
                                   options="{'no_create': True, 'no_open': True}"
                                   readonly="state != 'draft'"
                                   force_save="1"
                                   domain="[('branch_id', '=', branch_id), ('category_id', '=', equipment_type)]"/>
                            <field name="employee_id" placeholder="Select Employee" options="{'no_create': True}"
                                   readonly="1" force_save="1"/>
                            <field name="employee_phone" placeholder="Employee Phone" readonly="1" invisible="1"/>
                            <field name="priority" widget="priority"
                                   readonly="state != 'draft'" force_save="1" />
                        </group>
                        <group string="Dates">
                            <field name="create_date" readonly="1"/>
                            <field name="submitted_date" readonly="1"/>
                            <field name="repaired_date" readonly="1"/>
                            <field name="closed_date" readonly="1"/>
                        </group>
                    </group>
                    <!-- Required Photos Section -->
                    <group string="Equipment Photos (Required)">
                        <field name="photo_ids" widget="many2many_binary" nolabel="1" colspan="2"
                               readonly="state != 'draft'" force_save="1"/>
                    </group>
                    <!-- Description Section - Visible in all states -->
                    <group string="Description">
                        <field name="description" placeholder="Describe the issue with the equipment..." nolabel="1"
                               readonly="state != 'draft'" force_save="1"/>
                    </group>
                </sheet>
                <chatter reload_on_follower="True"/>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_request_search" model="ir.ui.view">
        <field name="name">branch_maintenance.request.search</field>
        <field name="model">branch_maintenance.request</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="branch_id"/>
                <separator/>
                <filter string="My Requests" name="my_requests" domain="[('create_uid', '=', uid)]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Repaired" name="repaired" domain="[('state', '=', 'repaired')]"/>
                <filter string="Closed" name="closed" domain="[('state', '=', 'closed')]"/>
                <separator/>
                <filter string="Archive" name="archive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Branch" name="group_branch" context="{'group_by': 'branch_id'}"/>
                    <filter string="Employee" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Graph View for Reporting -->
    <record id="view_request_graph" model="ir.ui.view">
        <field name="name">branch_maintenance.request.graph</field>
        <field name="model">branch_maintenance.request</field>
        <field name="arch" type="xml">
            <graph string="Requests Analysis" type="bar" stacked="True">
                <field name="branch_id" type="row"/>
                <field name="state" type="col"/>
            </graph>
        </field>
    </record>

    <!-- Pivot View for Reporting -->
    <record id="view_request_pivot" model="ir.ui.view">
        <field name="name">branch_maintenance.request.pivot</field>
        <field name="model">branch_maintenance.request</field>
        <field name="arch" type="xml">
            <pivot string="Requests Analysis">
                <field name="branch_id" type="row"/>
                <field name="state" type="col"/>
                <field name="priority" type="col"/>
            </pivot>
        </field>
    </record>

    <!-- Action for Reporting -->
    <record id="action_maintenance_request_analysis" model="ir.actions.act_window">
        <field name="name">Requests Analysis</field>
        <field name="res_model">branch_maintenance.request</field>
        <field name="view_mode">graph,pivot,kanban,list,form</field>
        <field name="context">{'search_default_group_branch': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data to analyze yet
            </p>
            <p>
                Create maintenance requests to see analysis and reports.
            </p>
        </field>
    </record>
</odoo>
