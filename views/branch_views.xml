<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action Window for Branches -->
    <record id="action_branch" model="ir.actions.act_window">
        <field name="name">Branches</field>
        <field name="res_model">branch_maintenance.branch</field>
        <field name="view_mode">list,form</field>
        <field name="help">Manage branches for maintenance requests</field>
    </record>

    <!-- List View -->
    <record id="view_branch_list" model="ir.ui.view">
        <field name="name">branch_maintenance.branch.list</field>
        <field name="model">branch_maintenance.branch</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="location"/>
                <field name="phone"/>
                <field name="email"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_branch_form" model="ir.ui.view">
        <field name="name">branch_maintenance.branch.form</field>
        <field name="model">branch_maintenance.branch</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group groups="branch_maintenance_request.group_maintenance_manager">
                        <field name="name" placeholder="Branch Name"/>
                        <field name="location" placeholder="Location/Address"/>
                        <field name="phone" placeholder="Phone Number"/>
                        <field name="email" placeholder="Email Address"/>
                        <field name="active"/>
                    </group>
                    <group groups="!branch_maintenance_request.group_maintenance_manager">
                        <field name="name" readonly="1"/>
                        <field name="location" readonly="1"/>
                        <field name="phone" readonly="1"/>
                        <field name="email" readonly="1"/>
                        <field name="active" readonly="1"/>
                    </group>
                </sheet>
                <chatter reload_on_follower="True"/>
            </form>
        </field>
    </record>
</odoo>
