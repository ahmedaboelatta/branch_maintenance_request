<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Feedback Wizard Form View -->
    <record id="view_feedback_wizard_form" model="ir.ui.view">
        <field name="name">branch_maintenance.feedback.wizard.form</field>
        <field name="model">branch_maintenance.feedback.wizard</field>
        <field name="arch" type="xml">
            <form string="Rate Service and Close Request">
                <sheet>
                    <div class="oe_title">
                        <h1>Service Feedback</h1>
                        <p class="text-muted">Please rate the technician's service before closing this request.</p>
                    </div>
                    <group>
                        <field name="request_id" readonly="1"/>
                    </group>
                    <group string="Rating">
                        <field name="rating" widget="priority"/>
                    </group>
                    <group string="Feedback">
                        <field name="feedback" placeholder="Share your experience with the maintenance service..." nolabel="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_submit_feedback_and_close" string="Submit &amp; Close Request" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Feedback Wizard Action -->
    <record id="action_feedback_wizard" model="ir.actions.act_window">
        <field name="name">Close Request with Feedback</field>
        <field name="res_model">branch_maintenance.feedback.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_request_id': active_id}</field>
    </record>
</odoo>
